{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 20",

  "compilerOptions": {
    "declaration": true,
    "module": "node16",
    "outDir": "dist",
    "lib": ["es2023", "dom"],
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "exclude": [
    "node_modules", "dist", "test"
  ]
}
